{
  "schemaVersion": 1,
  "id": "chatpatches",
  "version": "${version}",

  "name": "Chat Patches",
  "description": "A versatile client-side chat mod that makes the chat more useful and customizable! Check out the config and the GitHub page for more info!\nJoin the Discord at https://discord.gg/3MqBvNEyMz!",
  "authors": [
    "OBro1961"
  ],
  "contributors": [
    "OBro1961 (en_us)",
    "FITFC (pt_br)",
    "Calvineries (fr_fr)",
    "SJC08 (zh_cn)",
    "ploxxy (uk_ua, bugfixes)",
    "Fiz-Victor (bugfixes)",
    "co-91 (ja_jp)"
  ],
  "contact": {
    "homepage": "https://modrinth.com/mod/MOqt4Z5n",
    "issues": "https://github.com/mrbuilder1961/ChatPatches/issues",
    "sources": "https://github.com/mrbuilder1961/ChatPatches"
  },

  "license": "LGPLv3",
  "icon": "assets/chatpatches/icon.png",

  "environment": "client",
  "entrypoints": {
    "preLaunch": [
      "com.llamalad7.mixinextras.MixinExtrasBootstrap::init"
    ],
    "client": [
      "obro1961.chatpatches.ChatPatches"
    ],
    "modmenu": [
      "obro1961.chatpatches.integration.ModMenuIntegration"
    ]
  },
  "mixins": [
    "chatpatches.mixins.json"
  ],

  "depends": {
    "java": ">=17",
    "minecraft": [ "1.20", "1.20.1" ],
    "fabricloader": ">=0.14.21",
    "fabric-api": "*",
    "yet_another_config_lib_v3": "*",
    "modmenu": "*"
  },
  "recommends": {},
  "suggests": {
    "nochatreports": "*"
  },
  "breaks": {
    "morechathistory": "*"
  }
}
